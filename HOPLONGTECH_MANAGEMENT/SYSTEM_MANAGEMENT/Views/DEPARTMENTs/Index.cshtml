@model IEnumerable<SYSTEM_MANAGEMENT.Models.DEPARTMENT>

@{
    ViewBag.Title = "Danh sách phòng ban";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" border="1">
    <tr style="background-color:cornflowerblue; color: white; ">
        <th style="text-align:center">
            Tên Phòng ban
        </th>
        <th style="text-align:center">
            Trưởng phòng
        </th>
        <th style="text-align:center">
            Ghi chú
        </th>
        <th style="text-align:center"> Chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DEPARTMENT_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USER.FULLNAME)
        </td>
        <td>            
            @Html.DisplayFor(modelItem => item.NOTED)
        </td>
        <td style="text-align:center; font-size: 38;">
            <a href="/DEPARTMENTs/Edit/@item.DEPARTMENT_ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
            <a href="/DEPARTMENTs/Details/@item.DEPARTMENT_ID"><i class="fa fa-info-circle" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
            <a href="/DEPARTMENTs/Delete/@item.DEPARTMENT_ID"><i class="fa fa-trash-o " aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
            <a href="/DEPARTMENTs/Department_Users/@item.DEPARTMENT_ID"><i class="fa fa-list" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
           
        </td>
    </tr>
}

</table>
